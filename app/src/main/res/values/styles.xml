<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_old</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomTextView18Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomEditText12Normal" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:background">@drawable/form</item>
    </style>

    <style name="SpinnerCustom" parent="Widget.AppCompat.Spinner">
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_list</item>
    </style>

</resources>